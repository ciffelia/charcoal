{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "noUncheckedIndexedAccess": true
    "paths": {
      "@charcoal-ui/*": ["./packages/*/src"]
    }
  }
}
