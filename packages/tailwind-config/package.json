{
  "name": "@charcoal-ui/tailwind-config",
  "version": "1.0.1-alpha.4",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "default": "./dist/index.cjs"
  },
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "analyze": "npm-run-all --parallel --aggregate-output \"analyze:*\"",
    "analyze:cjs": "zx ../../misc/bundler.mjs --format=cjs --analyze",
    "analyze:esm": "zx ../../misc/bundler.mjs --format=esm --analyze",
    "build": "npm-run-all --parallel --aggregate-output \"build:*\"",
    "build:cjs": "zx ../../misc/bundler.mjs --format=cjs",
    "build:esm": "zx ../../misc/bundler.mjs --format=esm",
    "build:declaration": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly",
    "typecheck": "tsc --project tsconfig.build.json --noEmit",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "esbuild": "^0.15.7",
    "postcss": "^8.4.5",
    "postcss-selector-parser": "^6.0.9",
    "react": "^18.0.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.5",
    "typescript": "^4.5.5",
    "zx": "^7.0.3"
  },
  "dependencies": {
    "@charcoal-ui/foundation": "^1.0.1-alpha.0",
    "@charcoal-ui/theme": "^2.0.0-alpha.4",
    "@charcoal-ui/utils": "^1.1.0-alpha.0"
  },
  "peerDependencies": {
    "csstype": ">=3.0.0",
    "postcss": ">=7.0.32",
    "tailwindcss": "^1.4.6"
  },
  "files": [
    "src",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pixiv/charcoal.git",
    "directory": "packages/tailwind-config"
  }
}
